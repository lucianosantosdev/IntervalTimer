<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.App" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_800</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/primary_800</item>
        <item name="colorOutline">@color/primary_400</item>
    </style>

    <style name="NumberPickerTimerDividerStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">:</item>
    </style>

    <style name="NumberPickerStyle" parent="Theme.AppCompat.Light">
        <item name="np_dividerColor">@color/np_dividerColor</item>
        <item name="np_textColor">@color/np_textColor</item>
        <item name="np_selectedTextColor">@color/np_selectedTextColor</item>
        <item name="np_formatter">%02d</item>
        <item name="np_min">0</item>
        <item name="np_max">59</item>
        <item name="np_selectedTextAlign">selectedTextAlignCenter</item>
        <item name="np_textAlign">textAlignCenter</item>
        <item name="np_fadingEdgeEnabled">true</item>
        <item name="np_textSize">30sp</item>
        <item name="np_selectedTextSize">30sp</item>
    </style>

    <style name="ButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:width">10dp</item>
    </style>

    <style name="TimerTextAppearance" parent="TextAppearance.Material3.TitleLarge" >
        <item name="android:textSize">40sp</item>
    </style>

    <style name="FAB" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="iconGravity">textTop</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="FABOnRunning" parent="@style/FAB">
        <item name="android:backgroundTint">@color/primary_700</item>
        <item name="iconTint">@android:color/white</item>
    </style>
</resources>